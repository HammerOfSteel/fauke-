generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String        @id @default(uuid())
  name      String
  color     String        @default("#6366f1")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  entries   TimeEntry[]
  users     UserProject[]
}

model TimeEntry {
  id        String   @id @default(uuid())
  date      DateTime @db.Date
  hours     Decimal  @db.Decimal(4, 2)
  note      String?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([projectId])
  @@index([userId])
}

model User {
  id           String              @id @default(uuid())
  username     String              @unique
  passwordHash String
  displayName  String
  role         String              @default("user")
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  entries      TimeEntry[]
  projects     UserProject[]
  integrations UserIntegration[]
}

model UserProject {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
}

// ── Integrations ──────────────────────────────────────────────

model Integration {
  id          String              @id @default(uuid())
  provider    String              // "fortnox" | "visma" | "pe_accounting"
  name        String              // Human label e.g. "Fortnox – Our Company"
  config      Json                // Provider-specific config (tokens, company id, etc.) – encrypted at rest
  enabled     Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  users       UserIntegration[]
  syncLogs    SyncLog[]

  @@index([provider])
}

model UserIntegration {
  id            String      @id @default(uuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  integrationId String
  integration   Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  externalId    String?     // The user's employee/user ID in the external system
  createdAt     DateTime    @default(now())

  @@unique([userId, integrationId])
  @@index([userId])
  @@index([integrationId])
}

model SyncLog {
  id            String      @id @default(uuid())
  integrationId String
  integration   Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  userId        String?     // Null if system-level sync
  status        String      // "success" | "error" | "partial"
  message       String?
  entriesSynced Int         @default(0)
  createdAt     DateTime    @default(now())

  @@index([integrationId])
  @@index([createdAt])
}
